<h2>お客様情報編集</h2>
<% if Personal.find_by(:student_id=>session[:user_id]).present? then %>
    <%= form_for Student.find_by(:id=>session[:user_id]).personal ,url: student_edit_path do |f| %>
        <%= f.label :pref_id ,'都道府県' %>
        <%= f.collection_select :pref_id ,Pref.all,:id,:name %>
        <%= f.label :gakunen_if,'現在の学年' %>
        <%= f.collection_select :gakunen_id,Gakunen.all,:id,:name %>
        <%= f.label :name,'お名前'%>
        <%= f.text_field :name ,placeholder: '例）特急　華子' %>
        <%= f.label :cname,'お子様のお名前' %>
        <%= f.text_field :cname ,placeholder: '例）特急　太郎'%>
        <%= f.label :tel, '電話番号' %>
        <%= f.text_field :tel ,placeholder: 'xxx-xxxx-xxxx' %>
        <%= f.label :email, 'EMAIL' %>
        <%= f.email_field :email,placeholder: 'abc@def.com' %>
        <%= f.label :email, 'EMAIL(確認）' %>
        <%= f.email_field :email_confirmation,placeholder: 'abc@def.com' %>
        <%= f.submit '登録' %>
    <% end %>
<% else %>
    <%= form_for Personal.new ,url: student_edit_path do |f| %>
        <%= f.label :pref_id ,'都道府県' %>
        <%= f.collection_select :pref_id ,Pref.all,:id,:name %>
        <%= f.label :gakunen_if,'現在の学年' %>
        <%= f.collection_select :gakunen_id,Gakunen.all,:id,:name %>
        <%= f.label :name,'お名前'%>
        <%= f.text_field :name ,placeholder: '例）特急　華子' %>
        <%= f.label :cname,'お子様のお名前' %>
        <%= f.text_field :cname ,placeholder: '例）特急　太郎'%>
        <%= f.label :tel, '電話番号' %>
        <%= f.text_field :tel ,placeholder: 'xxx-xxxx-xxxx' %>
        <%= f.label :email, 'EMAIL' %>
        <%= f.email_field :email,placeholder: 'abc@def.com' %>
        <%= f.label :email, 'EMAIL(確認）' %>
        <%= f.email_field :email_confirmation,placeholder: 'abc@def.com' %>
        <%= f.submit '登録' %>
    <% end %>
<% end %>